{
  "compilerOptions": {
    "target": "es6",  // O "esnext" si prefieres lo más moderno
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/react"]  // Agregar esta línea para que TypeScript reconozca las definiciones de Jest
  },
  "include": [
    "src",
    "src/**/*.test.ts",  // Asegurarte de incluir archivos de prueba
    "src/**/*.test.tsx"  // Asegurarte de incluir archivos de prueba en JSX/TSX
  ]
}
